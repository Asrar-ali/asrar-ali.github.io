---
import Base from "@/layouts/Base.astro";

const projects = [
  {
    title: "System Design Interview Assistant",
    description: "Built a RAG system indexing 11K+ chunks with hybrid retrieval (BM25 + semantic vectors), achieving 79% recall at sub-100ms latency. Implemented Reciprocal Rank Fusion and automated Precision@K/Recall@K evaluation; generated grounded answers with inline citations via Groq API.",
    tech: ["Python", "RAG", "BM25", "Embeddings", "ChromaDB", "Groq API"],
    github: "https://github.com/Asrar-ali/system-design-assistant",
    demo: "https://huggingface.co/spaces/md-asrar/system-design-assistant",
    date: "Nov 2025 - Jan 2026",
    featured: true,
    live: true
  },
  {
    title: "Campus RAG Assistant",
    description: "Local RAG assistant with Qdrant vector database, BGE-M3 embeddings, and Ollama for LLM inference. Upload PDFs, DOCX, or TXT files and get cited answers from your own knowledge base.",
    tech: ["Python", "Qdrant", "Ollama", "BGE-M3", "Streamlit", "Docker"],
    github: "https://github.com/Asrar-ali/campus-rag-assistant",
    date: "Feb 2026",
    featured: true
  },
  {
    title: "Pneumonia Detection",
    description: "Trained a CNN on 5,000 chest X-ray images to detect pneumonia (AUC 0.91) and validated results using clean evaluation splits. Containerized the model behind a Flask REST API for real-time inference.",
    tech: ["Python", "PyTorch", "Flask", "Docker"],
    github: "https://github.com/Asrar-ali/Pneumonia-Detection",
    date: "Jan 2025 - Feb 2025",
    featured: true
  },
  {
    title: "BreezyWeather",
    description: "Responsive single-page app consuming the OpenWeather API with caching to reduce repeat calls. Added input validation and a mobile-first UI for reliable searches and clean UX on small screens.",
    tech: ["JavaScript", "React", "REST APIs"],
    github: "https://github.com/Asrar-ali/weather-app",
    date: "Nov 2023"
  }
];
---
<Base title="Projects â€” Mohammed Asrar Ali" description="Selected projects showcasing RAG systems, machine learning, and full-stack development.">
  <section class="py-12 md:py-16">
    <div class="animate-fade-up opacity-100">
      <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">Projects</h1>
      <p class="text-zinc-400 max-w-lg text-lg">Things I've built. Every project here is my own work &mdash; no forks, no templates.</p>
    </div>

    <div class="grid gap-6 mt-12">
      {projects.map((project) => (
        <article class={`glow-card p-6 md:p-8 reveal ${project.featured ? '' : ''}`}>
          <div class="flex flex-wrap items-center gap-3 mb-3">
            {project.featured && (
              <span class="px-2.5 py-1 rounded-md bg-brand-500/10 text-brand-400 text-xs font-mono font-medium">FEATURED</span>
            )}
            {project.live && (
              <span class="px-2.5 py-1 rounded-md bg-green-500/10 text-green-400 text-xs font-mono font-medium flex items-center gap-1.5">
                <span class="status-dot" style="width:6px;height:6px;"></span> LIVE
              </span>
            )}
          </div>
          <h2 class="font-display text-2xl font-semibold">{project.title}</h2>
          <p class="text-zinc-400 mt-3 leading-relaxed max-w-2xl">{project.description}</p>
          <div class="flex flex-wrap gap-2 mt-5">
            {project.tech.map(t => (
              <span class="tech-badge">{t}</span>
            ))}
          </div>
          <div class="flex gap-4 mt-6">
            {project.demo && (
              <a href={project.demo} target="_blank" rel="noopener" class="group text-sm text-brand-400 hover:text-brand-300 font-medium transition-colors">
                Live Demo <span class="inline-block ml-0.5 transition-transform group-hover:translate-x-0.5">&nearr;</span>
              </a>
            )}
            <a href={project.github} target="_blank" rel="noopener" class="group text-sm text-zinc-400 hover:text-zinc-200 font-medium transition-colors">
              Source Code <span class="inline-block ml-0.5 transition-transform group-hover:translate-x-0.5">&nearr;</span>
            </a>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-12 text-center reveal">
      <p class="text-zinc-500 text-sm mb-3">These are just the highlights.</p>
      <a href="https://github.com/Asrar-ali" target="_blank" rel="noopener" class="group inline-flex items-center gap-2 px-5 py-2.5 rounded-xl border border-surface-300 text-zinc-300 hover:border-brand-500 hover:text-brand-400 transition-all text-sm font-medium">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        Find more on GitHub <span class="inline-block ml-0.5 transition-transform group-hover:translate-x-0.5">&nearr;</span>
      </a>
    </div>
  </section>
</Base>
