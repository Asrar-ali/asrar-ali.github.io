<div aria-hidden="true" class="timeline-spine pointer-events-none"></div>
<script>
  // animate spine opacity on scroll with reduced-motion guard
  const mq = window.matchMedia('(prefers-reduced-motion: reduce)');
  if (!mq.matches) {
    const el = document.querySelector('.timeline-spine');
    const onScroll = () => {
      const y = window.scrollY || 0;
      el.style.opacity = String(0.2 + Math.min(0.6, y / 1200));
    };
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();
  }
</script>
